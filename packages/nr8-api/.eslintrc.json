{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "mocha"
  ],
  "extends": ["standard"],
  "parser": "babel-eslint",
  "parserOptions": {
    "typescript": true
  },
  "rules": {
    "mocha/no-skipped-tests": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": 1
  }
}
